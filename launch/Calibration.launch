<?xml version="1.0" ?>
<launch>

	<!-- GENERAL ARGUMENTS -->
	<arg name="robot_name" default="panda"/>
	<arg name="tool_name" default="microKB"/>
	<arg name="simulation" default="false"/>
	<arg name="safety_distance" default="0.03"/>

	<!-- ROBOT SETUP -->
	<include file="$(find robot_arm_tools)/launch/Setup_$(arg robot_name).launch">
		<arg name="tool_name" value="$(arg tool_name)"/>
		<arg name="simulation" value="$(arg simulation)"/>
		<arg name="safety_distance" value="$(arg safety_distance)"/>
	</include>

    <!-- MEASUREMENT (CALIBRATION) SERVER -->
	<node pkg="robot_arm_acoustic" type="MicrophoneCalibrationServer.py" name="microphone_calibration_server" output="screen"/>

	<!-- MAIN NODE -->
	<param name="measurementServerName" value="/microphone_calibration_server"/>
	<param name="storageFolderName" value="/tmp/MircrophoneCalibrationMeasurements/"/>
	<node pkg="robot_arm_acoustic" type="robot_arm_acoustic_calibration_node" name="robot_arm_acoustic_calibration_node" output="screen"/>

</launch>