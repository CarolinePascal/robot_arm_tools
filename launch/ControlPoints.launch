<?xml version="1.0" ?>
<launch>

	<!-- GENERAL ARGUMENTS -->
	<arg name="robot_name" default="panda"/>
	<arg name="tool_name" default="microGRAS"/>
	<arg name="simulation" default="false"/>
	<arg name="calibration" default="true"/>
	<arg name="safety_distance" default="0.01"/>

	<!-- ROBOT SETUP -->
	<include file="$(find robot_arm_tools)/launch/Setup_$(arg robot_name).launch">
		<arg name="tool_name" value="$(arg tool_name)"/>
		<arg name="simulation" value="$(arg simulation)"/>
		<arg name="calibration" value="$(arg calibration)"/>
		<arg name="safety_distance" value="$(arg safety_distance)"/>
		<arg name="planner_name" default="RRTConnect"/>
	</include>

	<!-- STUDIED OBJECT -->
	<node pkg="robot_arm_tools" type="robot_arm_tools_environment_node" name="robot_arm_tools_environment_node_object" output="screen">
		<param name="environmentFileName" value="$(find robot_arm_acoustic)/config/environments/CollisionVolumes.yaml"/>
	</node>

	<!-- MEASUREMENT SERVER -->
	<node pkg="robot_arm_acoustic" type="SoundMeasurementServer.py" name="sound_measurement_server" output="screen"/>
	
	<!-- MAIN NODE -->
	<arg name="measurement_server_storage_folder" default="/home/demo1/Desktop/AcousticMeasurements/ControlPoints/Default/"/>
	<param name="measurementServerName" value="/sound_measurement_server"/>
	<param name="measurementServerStorageFolder" value="$(arg measurement_server_storage_folder)"/>
	<node pkg="robot_arm_tools" type="robot_arm_tools_example_trajectory_node" name="robot_arm_tools_example_trajectory_node" output="screen" required="true">
		<param name="trajectoryFilePath" value="$(find robot_arm_acoustic)/config/ControlPoints.yaml"/>
	</node>

	<!-- Run Rviz --> 
    <node pkg="robot_arm_tools" type="robot_arm_tools_environment_node" name="robot_arm_tools_environment_node_environment" output="screen">
		<param name="environmentFileName" value="$(find robot_arm_acoustic)/config/environments/AnechoicRoom.yaml"/>
	</node>
    <!--<node type="rviz" name="rviz" pkg="rviz" args="-d $(find robot_arm_acoustic)/config/AcousticSetup.rviz"/>-->

</launch>